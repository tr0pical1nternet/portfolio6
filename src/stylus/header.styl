.site-header
  margin-bottom margin1


.site-title
  display grid
  grid-template-areas "charles-robertson contact" "web-design web-design"

  h1, h2
    margin-top 0
    margin-bottom 0

.site-title__web-design, .site-title__portfolio, .site-title__charles-robertson
  padding .55em margin0 .54em
  color color8
  background-color color0
  line-height 1

.site-title__web-design
  padding-left 2em
  border-radius 2em 0 0 2em
  margin-left auto
  text-transform uppercase
  font-size 2.25rem
  grid-area web-design

.site-title__charles-robertson
  padding-right 2em
  padding-top .7em
  border-radius 0 2em 2em 0
  font-size 1.25rem
  grid-area charles-robertson

.site-title__contact
  ul
    list-style none
    padding .05em 0 .05em .3em
    margin 0
    display flex
    justify-content flex-start
  
  li
    padding .5em .25em
    &:first
      padding-left 0

.main-menu
  padding 0 margin0
  
  ul
    list-style none
    padding-left 0
    display flex
    justify-content space-around

.main-menu__menu-item
  a
    text-decoration none



