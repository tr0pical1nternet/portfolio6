        left 0
        top 35.64%
        z-index 10

    &--01
        width 84.80%
        left 15.20%
        top 11.62%

    &--02
        width 49.71%
        left 5.49%
        top 0

    &--03
        width 74.61%
        left 0
        top 45.55%

    &--04
        width 36.65%
        left 63.35%
        top 10.77%

    &--05
        width 100%
        left 0
        top 0
    
    &--06
        width 100%
        left 0
        top 64.12%

.device__border
    position relative
    z-index 20
    
    svg
        display block
        overflow visible
        fill color0
        stroke color8
        stroke-width .5
        transition: fill .2s ease

        &:hover
            fill colorA;

