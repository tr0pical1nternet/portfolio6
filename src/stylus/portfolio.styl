.portfolio-gallery__device-overlay
    position relative
    z-index 20
    pointer-events none
    
    svg
        display block
        overflow visible
        fill color0
        stroke color8
        stroke-width .5
        // transition fill .2s ease

        &:hover
            stroke colorA
            stroke-width .75

