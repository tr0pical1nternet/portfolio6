
.portfolio-gallery
    height "calc(60vw + %s)" % (2 * margin1)
    margin 0 0 1rem

.portfolio-gallery__slides
    height 100%
    margin 0
    padding margin1 0
    list-style none

.slick-list
    height 100%

.slick-track
    height 100%

.portfolio-gallery__slide
    text-align center
    height 100%

.portfolio-gallery__slide-inner
    display inline-block
    position relative
    height 100%

    & > svg
        display block
        position relative
        height 100%

