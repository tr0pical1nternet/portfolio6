
.portfolio-gallery
    height "calc(60vw + %s)" % (2 * margin1)
    margin 0 0 1rem
    // overflow hidden
    // From glide
    position relative

.portfolio-gallery__track
    height 100%
    overflow hidden

.portfolio-gallery__slides
    display flex
    height 100%
    margin 0
    padding margin1 0
    list-style none

    // from Glide
    width 100%
    position relative
    backface-visibility: hidden
    transform-style preserve-3d
    touch-action pan-y
    overflow hidden
    white-space nowrap
    will-change transform

    &--dragging {
        user-select none }

.portfolio-gallery__slide
    text-align center
    height 100%

    // from Glide
    width 100%
    flex-shrink 0
    white-space normal
    user-select none
    -webkit-touch-callout none
    -webkit-tap-highlight-color transparent

    a
        user-select none
        -webkit-user-drag none
        -moz-user-select none
        -ms-user-select none
    

.portfolio-gallery__slide-inner
    display inline-block
    position relative
    height 100%
    // margin 0 auto

    & > svg
        display block
        position relative
        height 100%

