.device__content
    position absolute
    width 100%
    top 0
    left 0
    -webkit-overflow-scrolling touch

.portfolio-info
    overflow-x hidden

.portfolio-info__track
    // height 100%

.portfolio-info__slides
    list-style none
    padding-left 0
    // height 100%
    display flex
    margin-bottom 0

.portfolio-info__slide
    width 100vw
    display flex
    flex-direction column

.portfolio-info__header
    display inline-block
    padding 1rem 2.75rem 1rem margin0
    color color9
    background-color color0
    border-radius 0 3rem 3rem 0
    margin-right auto

.portfolio-info__title
    // margin margin0 margin0 -.3em
    margin 0
    font-size 1.75rem
    text-transform uppercase

.portfolio-info__link
    display inline-block
    // padding-top .5em
    font-size 1.25rem
    font-style italic
    // font-family font-family__heading

.portfolio-info__text-wrap
    display flex
    position relative
    flex-direction column
    padding 0 margin0 0
    background-color color0
    color color8
    border-radius 0 3rem 0 0
    line-height 1.5

.portfolio-info__text
    // margin-top 0
    color color8

.portfolio-info__heading
    font-size 1.5rem
    margin-top "calc(%s / 2)" % margin0
    margin-bottom margin0
    color color9

.portfolio-info__list
    margin-top 0
    margin-bottom 0

.portfolio-info__bottom-decoration
    flex-grow 1
    background-color #000

.portfolio-info__bottom-decoration-inner
    margin-top auto
       

.portfolio-info__next
    background none
    width 2.25rem
    padding 10%
    position absolute
    right 0
    top 50%
    padding 0
    border none
    transform translateY(-50%)
    opacity .75
    transition opacity .2s ease

    &:hover
        opacity 1

.portfolio-info__half-circ
    fill colorA
    // opacity .75

.portfolio-info__right-arrow
    stroke color9
    stroke-width 25
    stroke-linejoin round
    stroke-linecap round
    fill none
    

    



