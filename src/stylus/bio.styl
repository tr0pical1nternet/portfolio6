.bio
    background-color color0
    overflow hidden

.bio__top-decoration
    background-color color8

.bio__top-decoration-inner
    padding-bottom margin1
    border-radius 0 0 0 3rem
    background-color color0

.bio__content
    background-color color8
    border-radius 0 3rem 3rem 0
    padding margin1 margin0
    position relative
    overflow hidden

.bio__heading
    margin-top 0
    font-size 2rem
    display inline-block

.bio__figure
    position absolute
    width 62%
    margin 0
    border-radius 50%
    overflow hidden
    top -4%
    right -7%

.bio__img
    display block
    width 100%

.bio__text-cutout
    width 80%
    height 0
    padding-bottom 80%
    shape-outside circle(50% at 74% 22%)
    float right


    

