.bio
    background-color color0
    overflow hidden

.bio__top-decoration
    background-color color8

.bio__top-decoration-inner
    padding-bottom margin1
    border-radius 0 0 0 3rem
    background-color color0

.bio__content
    background-color color8
    border-radius 0 3rem 3rem 0
    padding 0 0 margin1 margin0
    position relative
    overflow hidden
    line-height 1.5

    p
        // margin-left margin0
        margin-right margin0

.bio__heading
    display inline-block
    margin margin1 0 0
    font-size 2rem

.bio__figure
    float right
    shape-outside circle(54% at 54% 46%)
    width 12rem
    margin 0 0 margin0 margin0
    border-radius 50% 0 0 50%
    overflow hidden

.bio__img
    display block
    width 100%

